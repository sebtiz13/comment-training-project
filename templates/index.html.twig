{% extends 'base.html.twig' %}

{% block title 'ACME corporation' %}

{% block body %}
  <div class="container mt-3">
    <h1>Last items</h1>
    <div class="row flex">
      {% if items is defined %}
        {% for item in items %}
          <div class="col-3">
            <div class="card">
              <img src="{{ item.image }}" alt="{{ item.title }}" class="card-img-top">
              <div class="card-body">
                <h5 class="card-title">
                  <a href="{{ path('item.show', {slug: item.slug}) }}">{{ item.title }}</a>
                </h5>
                <p class="card-text">{{ item.description }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endblock %}
